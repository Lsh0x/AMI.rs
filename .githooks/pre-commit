#!/bin/bash
# Pre-commit hook for Rust projects
# Ensures code is formatted and passes clippy checks

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ cargo not found. Please install Rust."
    exit 1
fi

# 1. Check code formatting
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting check failed!"
    echo "ğŸ’¡ Run 'cargo fmt --all' to fix formatting issues."
    exit 1
fi
echo "âœ… Code formatting is correct"

# 2. Run clippy with strict warnings
echo "ğŸ”§ Running clippy checks..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy check failed!"
    echo "ğŸ’¡ Fix the clippy warnings above before committing."
    exit 1
fi
echo "âœ… Clippy checks passed"

# 3. Optional: Run tests (commented out by default as it can be slow)
# Uncomment if you want to run tests on every commit
# echo "ğŸ§ª Running tests..."
# if ! cargo test --quiet; then
#     echo "âŒ Tests failed!"
#     exit 1
# fi
# echo "âœ… Tests passed"

echo "âœ… All pre-commit checks passed!"
exit 0

